---
import { HeaderWrapper } from "@rkn/base-components";
import { HeaderLogo } from "@rkn/base-components";
import { HeaderNav } from "@rkn/base-components";
import { HeaderNavItem } from "@rkn/base-components";
import { HeaderNavDropdown } from "@rkn/base-components";
import { HeaderNavDropdownItem } from "@rkn/base-components";
import { HeaderToggle } from "@rkn/base-components";
---

<HeaderWrapper>
    <HeaderLogo
        textLogo="/images/AnchorageTextLogo.png"
        logoAltText="Anchorage Collective Logo"
    />
    <HeaderNav>
        <HeaderNavItem itemhref="/find-me-a" itemName="Find Me A..." />
        <HeaderNavDropdown buttonName="About The Anchorage">
            <HeaderNavDropdownItem
                itemhref="/who-we-are"
                itemName="Who We Are"
            />
            <HeaderNavDropdownItem
                itemhref="/the-collective"
                itemName="The Collective"
            />
        </HeaderNavDropdown>
        <HeaderNavItem itemhref="/moorings" itemName="Moorings" />
        <HeaderNavItem itemhref="/contact" itemName="Contact" />
    </HeaderNav>
    <HeaderToggle />
</HeaderWrapper>
