---
const { itemName, itemhref } = Astro.props;
---

<li><a href={itemhref}>{itemName}</a></li>

<style>
    li {
        display: flex;
        align-items: center;
        margin-right: auto;
        flex-shrink: 0;
        flex-grow: 1;
        width: 100%;
        padding-left: 0;
    }
    a {
        text-decoration: none;
        color: var(--gunmetal);
        width: 100%;
        height: 100%;
        padding-left: 2rem;
        padding-top: 1rem;
    }
    a:hover,
    a:focus {
        background-color: var(--gunmetal-tint);
        color: black;
    }

    a:last-of-type {
        padding-bottom: 10px;
    }
    li {
        flex-basis: 40px;
    }
</style>
