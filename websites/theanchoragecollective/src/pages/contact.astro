---
import AnchorageBaseLayout from "../layouts/AnchorageBaseLayout.astro";
import {
    GoogleMaps,
    BlockDoubleColumn,
    SectionWrapper,
    BlockPaddingWrapper,
    HeroBannerShallow,
} from "@rkn/page-components";
const title = "Contact Us";
---

<AnchorageBaseLayout title={title}>
    <HeroBannerShallow
        BackgroundImage="images/HeaderImage.jpg"
        HeroText="Get in Touch!"
    />
    <div class="container-outer">
        <div class="container-inner">
            <div>
                <div class="address">
                    <h2>Anchoring</h2>
                    <p>
                        Unless otherwise noted, group and individual work are
                        based at:
                    </p>
                    <h5>
                        The Anchorage<br />
                        68 Waverley Street<br />
                        Dianella WA 6059<br />
                        admin@anchorage.org.au<br />
                        (08) 9275 3773
                    </h5>
                </div>
            </div>
            <div>
                <img class="logo" src="/images/ColourLogo.png" />
            </div>
            <div class="map-container">
                <div>
                    <h2>Finding Us</h2>
                    <GoogleMaps />
                </div>
            </div>
            <div class="form-container">
                <h2>Contact Us</h2>
                <form id="contact-form">
                    <label for="your-name">Your Name</label>
                    <input id="your-name" type="text" />
                    <label for="your-email">Your Email</label>
                    <input id="your-email" type="email" />
                    <label for="subject">Subject</label>
                    <input id="subject" type="text" />
                    <label for="your-message">Your Message</label>
                    <textarea id="your-message"></textarea>
                    <input id="submit-form" type="submit" value="Submit Form" />
                </form>
            </div>
        </div>
    </div>
</AnchorageBaseLayout>
<style>
    div.container-outer {
        display: flex;
        align-items: center;
        justify-content: center;
        align-items: center;
        flex-direction: column;
        padding: 2vw 4vw 0 4vw;
    }
    div.container-inner {
        display: grid;
        grid-template-columns: repeat(2, 40vw);
        justify-items: center;
        align-items: center;
    }
    @media (max-width: 915px) {
        div.container-inner {
            grid-template-columns: 1fr;
        }
        img.logo {
            display: none;
        }
    }
    @media (min-width: 639px) {
        div.address {
            margin-right: 10vw;
        }
    }
    .container-inner div {
        width: 100%;
        height: 100%;
    }
    .container-inner > div {
        display: flex;
        justify-content: center;
        align-items: center;
        width: 100%;
        padding-bottom: 2rem;
    }

    img {
        width: auto;
        height: 240px;
        margin: 0 auto;
    }
    h2 {
        color: #51534a;
        padding-bottom: 2rem;
    }
    p,
    h5 {
        color: #51534a;
    }

    /*FORM FORMATTING*/
    div.form-container {
        display: flex;
        flex-direction: column;
        width: 100%;
    }
    @media (min-width: 916px) {
        div.form-container {
            margin-left: 10rem;
        }
    }
    label {
        display: block;
        color: #51534a;
        font-weight: 500;
        font-size: 18px;
    }
    form {
        display: flex;
        flex-direction: column;
        min-width: 100%;
    }
    input {
        font-size: 18px;
        padding: 0.5rem;
        border: solid 1px var(--gunmetal-tint);
        border-radius: 4px;
        margin-bottom: 1rem;
    }
    textarea {
        min-height: 150px;
        border: solid 1px var(--gunmetal-tint);
    }
    [type="submit"] {
        background-color: #51534a;
        font-size: 18px;
        width: min-content;
        padding: 1rem;
        margin: 1rem 0;
        color: white;
        border-radius: 4px;
    }
</style>
