---
import lgdlogo from "../images/lgdsm.png";
import anchlogo from "../images/anchsm.png";
import sixeightwlogo from "../images/68wsm.png";
import SidebarToggle from "./SidebarToggle.astro";
---

<header id="headernavid">
    <div class="header-left">
        <SidebarToggle />
    </div>
    <nav>
        <a href="https://livinggracedianella.org.au" target="_blank">
            <img src={lgdlogo} alt="Living Grace Dianella logo" />
        </a>
        <a href="https://anchorage.org.au" target="_blank">
            <img src={anchlogo} alt="The Anchorage Collective logo" />
        </a>
        <a href="https://68waverley.org.au" target="_blank">
            <img src={sixeightwlogo} alt="68 Waverley logo" />
        </a>
    </nav>
    <div class=".header-right"></div>
    <div class="title">DIANELLA CHURCH OF CHRIST INC.</div>
</header>
<style>
    header {
        display: grid;
        grid-template-rows: 70% 30%;
        grid-template-columns: 10% 1fr 10%;
        height: 100%;
    }
    nav {
        grid-row: 1/2;
        grid-column: 2/3;
        display: flex;
        align-items: stretch;
        justify-content: center;
        max-height: var(--header-height);
    }
    .header-left {
        grid-row: 1/3;
        grid-column: 1/2;
        display: flex;
        align-items: center;
    }
    .header-right {
        grid-row: 1/3;
        grid-column: 3/4;
    }
    img {
        height: 7em;
        padding-top: 1em;
    }
    .title {
        grid-row: 2/3;
        grid-column: 2/3;
        text-align: center;
        color: white;
        font-size: 2.5em;
        transition: 0.25s;
    }

    @media (max-width: 639px) {
        .title {
            font-size: 1.75rem;
        }
    }
</style>
